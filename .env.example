### Example environment variables for the bot
# Discord
BOT_TOKEN=

# Database
MONGO_URI=

# Runtime
NODE_ENV=production
PORT=3000

# Optional behaviour
# Set to true to register slash commands globally (may take up to 1 hour to propagate)
REGISTER_GLOBAL_COMMANDS=false

# Comma-separated folders considered restricted (case-insensitive)
RESTRICTED_FOLDERS=Administracao,Owner

# Branding (used in embeds/footers)
BRAND_NAME=MyBot
BRAND_COLOR=#3498db
SUPPORT_SERVER=

# Logging
LOG_LEVEL=info
